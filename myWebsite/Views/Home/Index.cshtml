@model IEnumerable<myWebsite.Models.ProjectModel>

@{
    ViewBag.Title = "Home";
}

    <div class="container marketing MainProjectRow" >

        <!-- Three columns of text below the carousel -->
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4">
                    <img class="img-circle" src="@Html.DisplayFor(modelItem => item.ImagePath)" alt="@item.Name Image" width="140" height="140">
                        <h2>@Html.DisplayFor(modelItem => item.Name)</h2>

                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                    <p>@Html.ActionLink("View Details >>", "Project", "Projects", routeValues: new { id = item.Id}, htmlAttributes: new { id = item.Id, @class = "btn btn-default", @role = "button" })</p>
                </div><!-- /.col-lg-4 -->
            }


        </div><!-- /.row -->


    </div><!-- /.container -->
</body>
