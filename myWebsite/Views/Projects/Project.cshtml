@{ 
/* 
 Project page heading should be replaces with the name of the project in final release
 Page should show revision events as well as the download link to allow for review.
 Later iteration of this page will have hidden information on this page. Hidden information will
 include but not be limited to the download link, revisor and statistics as well as extended bug
 information.
 Ill parse from github at a later time.
*/
}
@model myWebsite.Models.JsonObject

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
</head>
<div class="container" >
    <h2>Project:</h2> <h2 style="text-align:center">@Model.ProjectName</h2>
</div>

<div >
    <div class="row" style="padding-bottom:2em">

        <img class="img-circle img-responsive center-block" src="@Model.ProjectImagePath" style="width:30em; height:30em;" />
        
    </div>
    <div class="row">
        <div class="pull-xs-left well col-md-6">
            <h3>Revision history:</h3>
            <ul>
                @foreach (var i in Model.Commits)
                {
                    <li >Author: @i.Author</li>
                    <ul>
                        <li class="CommitArea">Commit SHA: @i.Sha</li>
                        <li>Commit Date: @i.Date</li>
                        <li>Commit Message: @i.Message</li>
                    </ul>
                    <br />
                }

            </ul>
            
        </div>
        <div class="pull-xs-right well col-md-6">
            <h3>Resources:</h3>
            <a href="@Model.ProjectURL">GitHub</a>
        </div>
    </div>
</div>